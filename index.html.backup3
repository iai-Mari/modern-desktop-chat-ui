        <!-- Main Content -->
        <div class="main-content">
            <div class="header">
                <h2 id="page-title">Main</h2>
                <div class="header-controls">
                    <button class="theme-toggle" onclick="toggleTheme()">üåô Dark</button>
                    <div class="status">
                        <span class="status-dot" id="connection-dot"></span>
